<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_register"
    android:layout_width="match_parent"
    android:background="@drawable/hii"
    android:layout_height="match_parent"
    tools:context="com.hardway.gnits.login.LR">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#803F51B5"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@null"
            android:padding="16dp"
            android:layout_height="match_parent">



            <Button
                android:text="Sign UP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="49dp"
                android:id="@+id/sign_up"
                android:textColor="#3F51B5"
                android:background="@drawable/rounded_button2"
                android:layout_alignParentBottom="true" />

            <Button
                android:text="SIGN IN"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_button1"
                android:textColor="@color/icons"
                android:layout_marginBottom="34dp"
                android:id="@+id/sign_in"
                android:layout_above="@+id/sign_up"
                />

            <TextView
                android:text="GNITS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="80dp"
                android:textColor="#FFFFFF"
                android:id="@+id/tv1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />


        </RelativeLayout>



    </RelativeLayout>




</RelativeLayout>
