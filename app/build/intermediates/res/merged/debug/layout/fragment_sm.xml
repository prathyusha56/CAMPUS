<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context="com.hardway.gnits.fragments.BN">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_height="wrap_content">


       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           card_view:cardCornerRadius="8dp"
           card_view:cardElevation="2dp"
           android:clickable="true"
           card_view:cardUseCompatPadding="true"
           android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:text="Staff Availability"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>
                <View
                    android:layout_width="match_parent"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="0.5dp"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher -1 "
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Available"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher -2 "
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Available"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher -3 "
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Absent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher -4 "
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Available"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Teacher -5 "
                        android:layout_weight="2"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Available"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>


            </LinearLayout>



       </android.support.v7.widget.CardView>

       <View
           android:layout_width="match_parent"
           android:layout_height="5dp"/>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           card_view:cardCornerRadius="8dp"
           card_view:cardElevation="2dp"
           android:clickable="true"
           card_view:cardUseCompatPadding="true"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="8dp"
               android:layout_height="wrap_content">


               <TextView
                   android:layout_width="match_parent"
                   android:text="Todays Schedule"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_height="wrap_content" />

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="5dp"/>
               <View
                   android:layout_width="match_parent"
                   android:background="@color/colorPrimaryDark"
                   android:layout_height="0.5dp"/>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="5dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="09:15AM - 10:55AM"
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject-1"
                       android:gravity="center"
                       android:id="@+id/subject1"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="11:05AM - 12:45PM "
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject-2"
                       android:id="@+id/subject2"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="02:05PM - 03:40PM"
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject-3"
                       android:gravity="center"
                       android:id="@+id/subject3"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="03:40PM - 04:30PM "
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject-4"
                       android:gravity="center"
                       android:id="@+id/subject4"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </LinearLayout>



       </android.support.v7.widget.CardView>


       <View
           android:layout_width="match_parent"
           android:layout_height="5dp"/>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           card_view:cardCornerRadius="8dp"
           card_view:cardElevation="2dp"
           android:clickable="true"
           card_view:cardUseCompatPadding="true"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:padding="8dp"
               android:layout_height="wrap_content">


               <TextView
                   android:layout_width="match_parent"
                   android:text="Assignment"
                   android:textStyle="bold"
                   android:textColor="@color/colorPrimaryDark"
                   android:layout_height="wrap_content" />

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="5dp"/>
               <View
                   android:layout_width="match_parent"
                   android:background="@color/colorPrimaryDark"
                   android:layout_height="0.5dp"/>

               <View
                   android:layout_width="wrap_content"
                   android:layout_height="5dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject - 1"
                       android:layout_weight="2"
                       android:layout_height="wrap_content"
                       android:id="@+id/textView" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="to be submitted by dd/mm/yyyy"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject - 2"
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="to be submitted by dd/mm/yyyy"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject - 3"
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="to be submitted by dd/mm/yyyy"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />



               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:weightSum="3"
                   android:orientation="horizontal"
                   android:layout_height="wrap_content">

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="subject - 4"
                       android:layout_weight="2"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:text="to be submitted by dd/mm/yyyy"
                       android:gravity="center"
                       android:layout_weight="1"
                       android:layout_height="wrap_content" />

               </LinearLayout>

           </LinearLayout>



       </android.support.v7.widget.CardView>


       <View
           android:layout_width="match_parent"
           android:layout_height="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </LinearLayout>



   </LinearLayout>

</ScrollView>
