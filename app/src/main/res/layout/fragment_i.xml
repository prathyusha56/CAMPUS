<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.hardway.gnits.fragments.IF">



    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Number of people" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/input_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Time" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:text="Menu"
        android:textSize="20dp"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="chicken curry"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="-"
            android:id="@+id/minus_1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:gravity="center"
            android:id="@+id/zero_1"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="+"
            android:id="@+id/plus_1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="chicken fry    "
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="-"
            android:gravity="center"
            android:id="@+id/minus_2"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:gravity="center"
            android:id="@+id/zero_2"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="+"
            android:id="@+id/plus_2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="butter non     "
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="-"
            android:gravity="center"
            android:id="@+id/minus_3"

            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:gravity="center"
            android:id="@+id/zero_3"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="+"
            android:gravity="center"
            android:id="@+id/plus_3"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:text="Chapathi        "
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="-"
            android:gravity="center"
            android:id="@+id/minus_4"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="0"
            android:gravity="center"
            android:id="@+id/zero_4"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="+"
            android:gravity="center"
            android:id="@+id/plus_4"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/view" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Submit"
        android:id="@+id/submit_food"
        android:textColor="@color/icons"
        android:background="@drawable/rounded_button3"
        />
    

</LinearLayout>
